<%- include('./partials/head')%>
<%- include('./partials/nav')%>

<table class="table table-striped table-hover" style="margin-bottom: 100px;">
        <thead>
            <th>Book</th>
            <th>Title</th>
            <th>Price</th>
            <th></th>
            
        </thead>
    <tbody>
    <% for(b of booksjson){ %>
        <tr>
            <td><img src="<%= b.image %>" style="width: 100px; height: auto;"></td> 
            <td style="vertical-align: middle;"><%= b.title %></td>
            <td style="vertical-align: middle;"><%= b.price %></td>
            <td>
                <form action="/add" method="post">
                    <input type="hidden" name="title" value="<%= b.title %>">
                    <input type="hidden" name="price" value="<%= b.price %>">
                    <input type="hidden" name="image" value="<%= b.image %>">
                    <button type="submit" class="btn btn-success p-1">Add to Cart</button>
                </form>
            </td>


        </tr>
        <% } %>
    </tbody>
</table>



<%- include('./partials/footer')%>